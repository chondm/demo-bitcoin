<%= semantic_form_for @document, :url => "/pay_with_bitcoin", :method => "POST" do |f| %>

    <%= f.inputs do %>
    	<%= f.input :id, :as => :hidden %>
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :currency, :as => :select, :collection =>  Money::Currency.all.collect{|x| [x.iso_code, x.iso_code]}, :include_blank => "BTC"%>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :label => "Pay with Bitcoin"%>
    <% end %>	
<% end %>